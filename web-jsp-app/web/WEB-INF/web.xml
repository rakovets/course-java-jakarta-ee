<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>main.java.com.rakovets.course_java_enterprise.solution.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DataForwardServlet</servlet-name>
        <servlet-class>main.java.com.rakovets.course_java_enterprise.solution.servlet.DataForwardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataForwardServlet</servlet-name>
        <url-pattern>/DataForwardServlet</url-pattern>
    </servlet-mapping>

</web-app>